---
interface Props {
	caption?: string;
	src: string;
}

const { caption, src } = Astro.props;
---

<figure>
	<audio class="w-full" controls src={src}>
		<track
			default
			kind="captions"
			src={src.replace(/\.\w+$/, '.vtt')}
			srclang="en"
		/>
	</audio>
	{caption && <figcaption class="text-sm text-center">{caption}</figcaption>}
</figure>
