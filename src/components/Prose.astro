---
import type { HTMLTag, Polymorphic } from 'astro/types';

type Props<Tag extends HTMLTag> = {
	class?: string;
} & Polymorphic<{ as: Tag }>;
const { as: Component = 'article', class: className } = Astro.props;
---

<Component
	class:list={['prose mx-auto max-w-[65ch] p-10', className]}
	data-pagefind-body
>
	<slot />
</Component>
